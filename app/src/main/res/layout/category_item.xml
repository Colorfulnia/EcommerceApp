<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/frame"
    android:layout_height="160dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/adapterLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="6dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardCategory"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="@+id/adapterLayout"
            app:layout_constraintStart_toStartOf="@+id/adapterLayout"
            app:layout_constraintTop_toTopOf="@id/adapterLayout">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/categoryImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="@+id/cardCategory"
                app:layout_constraintStart_toStartOf="@+id/cardCategory"
                app:layout_constraintTop_toTopOf="@id/categoryImage"
                app:srcCompat="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/categoryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Category"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/adapterLayout"
            app:layout_constraintStart_toStartOf="@id/adapterLayout"
            app:layout_constraintTop_toBottomOf="@id/cardCategory" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>